FROM gcc:latest AS cpp_builder
WORKDIR /usr/src/cpp_app
COPY ./src/worker/jobs ./src/worker/jobs
RUN mkdir -p dist/worker/jobs && g++ src/worker/jobs/dummy-job.cpp -o dist/worker/jobs/dummy-job

FROM node:18-alpine
WORKDIR /usr/src/app
COPY package*.json ./
RUN npm ci --only=production
COPY . .
RUN npm run buildWorkerAndJobs
EXPOSE 3000
CMD ["node", "dist/worker/worker-app.js"] 
